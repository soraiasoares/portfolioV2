.sr-only {
	position:absolute;
	left:-10000px;
	top:auto;
	width:1px;
	height:1px;
	overflow:hidden;
}

.circular-text {
    width: 20%;
    height: auto; 
    position: absolute;
    bottom: 24px;
    right: 24px;
}

.circular-text .text{
	position: absolute;
	margin: auto;
	left: -15px; right: 0; bottom: 0; top:  0;
	width: 140px;
	height: 140px;
	z-index: 10;
	animation: rotate-animation 25s infinite linear;
}


