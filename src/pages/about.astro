<script is:inline>

function scrollToTarget(elementID, offset, el) {
      var element = document.getElementById(elementID);
      var elementPosition = element.getBoundingClientRect().top;
      var offsetPosition = elementPosition + window.pageYOffset - offset;
      
      window.scrollTo({
          top: offsetPosition,
          behavior: "smooth"
      });

      toggleAboutMeSticky(el)
  }

  function toggleAboutMeSticky(el){
    document.querySelectorAll('.stickyLink').forEach(
    (element, index, array) => {
        element.classList.remove('active')
    })
    el.classList.add('active')
  }

  function resetHobbies(){
    document.querySelector('.hobbie label.active').classList.remove('active');
    document.getElementById('hobbies').classList.remove('active')
  }

  document.querySelectorAll('.hobbie label').forEach((el) => {
    el.addEventListener('mouseenter', function(){
      document.getElementById('hobbies').classList.add('active');
      
      let otherActive = document.querySelector('.hobbie label.active');
      if (otherActive){
        otherActive.classList.remove('active');
      }
      el.classList.add('active');
    })
    
    el.addEventListener('mouseleave', function(){
      resetHobbies();
    })
  })

</script>